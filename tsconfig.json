{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "paths": {
      "components": ["src/components"],
      "components/*": ["src/components/*"],
      "config": ["src/config"],
      "ducks": ["src/modules/ducks"],
      "ducks/*": ["src/modules/ducks/*"],
      "modules": ["src/modules"],
      "modules/*": ["src/modules/*"],
      "views": ["src/views"],
      "views/*": ["src/views/*"],
      "utils": ["src/utils"],
      "utils/*": ["src/utils/*"],
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}